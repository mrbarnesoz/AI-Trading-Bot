# Kafka broker configuration
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_SECURITY_PROTOCOL=PLAINTEXT
# KAFKA_SSL_CAFILE=/path/to/ca.pem
# KAFKA_SSL_CERTFILE=/path/to/cert.pem
# KAFKA_SSL_KEYFILE=/path/to/key.pem

# TradingView webhook secret (must match the alert message)
TRADINGVIEW_SHARED_SECRET=change-me

# Sentiment provider configuration
SENTIMENT_PROVIDER=newsapi
SENTIMENT_API_URL=https://newsapi.org/v2/everything
SENTIMENT_API_KEY=replace-with-api-key
SENTIMENT_QUERY=bitcoin OR crypto
SENTIMENT_LANGUAGE=en
SENTIMENT_MAX_ITEMS=50
SENTIMENT_POLL_INTERVAL=120

# DuckDB override (optional)
# DUCKDB_PATH=warehouse.duckdb
# DUCKDB_SCHEMA=raw_feeds

# Latency arbitrage guardrails
# ENABLE by updating config.yaml risk.latency_arb.enabled
# Summary file is generated by analysis/latency_arbitrage_sim.py
